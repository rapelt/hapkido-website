{
  "name": "hapkido-website",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod --source-map=true",
    "build:staging": "ng build --configuration=staging",
    "serve:staging": "ng serve --configuration=staging",
    "serve:prod": "ng serve --prod",
    "test": "ng test",
    "test-ci": "ng test --karma-config=src/karma.ci.conf.js",
    "test-code-coverage": "ng test --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:ssr": "npm-run-all build:client-and-server-bundles webpack:server build:functions move-index",
    "serve:ssr": "node dist/server.js",
    "build:functions": "cd functions && npm run build && cd ..",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:client-and-server-bundles": "npm run build:prod && ng run hapkido-website:server",
    "move-index": "mv ./dist/browser/index.html ./functions/lib/index.html",
    "firebase": "firebase deploy --only functions",
    "build-and-deploy": "npm-run-all build:ssr firebase",
    "lighthouse-ci": "lighthouse-ci https://hapkido-website-test.firebaseapp.com/ --score=80 --report",
    "lighthouse": "lighthouse https://hapkido-website-test.firebaseapp.com --output=json --output-path=./lighthouse/report.json",
    "lighthouse-report": "./node_modules/.bin/ts-node ./lighthouse/lighthouse-reporter.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/platform-server": "^6.0.3",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "^6.0.3",
    "@angular/service-worker": "^6.0.3",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "core-js": "^2.5.4",
    "express": "^4.16.3",
    "rxjs": "^6.0.0",
    "ts-loader": "^4.3.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.6",
    "@angular/cli": "~6.0.7",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "lighthouse": "^2.9.4",
    "lighthouse-ci": "^1.0.1",
    "npm-run-all": "^4.1.3",
    "protractor": "~5.3.0",
    "ts-node": "^5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "webpack-cli": "^3.0.3"
  }
}
